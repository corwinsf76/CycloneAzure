# PostgreSQL connection string (replace with your Azure PostgreSQL connection details)
DATABASE_URL=postgresql://cycloneadmin:YourSecurePassword123!@cyclonev2-postgres.postgres.database.azure.com:5432/cyclonev2db

# --- API Keys ---
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TLD=us

CRYPTONEWS_API_TOKEN=your_cryptonews_api_token

REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=your_reddit_user_agent

TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# API Settings for other integrations
CRYPTOPANIC_API_TOKEN=your_cryptopanic_api_token

# AlphaVantage Configuration
ALPHAVANTAGE_API_KEY=dummy_key_for_testing

# CoinGecko Configuration (optional)
COINGECKO_API_KEY=

# --- Sentiment Model ---
SENTIMENT_MODEL_NAME=ProsusAI/finbert

# --- Logging ---
LOG_LEVEL=INFO

# --- Scheduling Intervals (seconds) ---
PRICE_FETCH_INTERVAL=300
INDICATOR_CALC_INTERVAL=300
NEWS_FETCH_INTERVAL=900
REDDIT_FETCH_INTERVAL=900
TWITTER_FETCH_INTERVAL=900
SENTIMENT_ANALYSIS_INTERVAL=1800
TRADING_LOGIC_INTERVAL=300
MODEL_RETRAIN_INTERVAL=86400

# --- Trading Parameters ---
INITIAL_CAPITAL_USD=10000.0
PORTFOLIO_DRAWDOWN_PCT=0.15
TRADE_TARGET_SYMBOL_PRICE_USD=1.0

# --- Model Training Parameters ---
FEATURE_LAG_PERIODS=20
SENTIMENT_AGG_WINDOW_SHORT=1h
SENTIMENT_AGG_WINDOW_LONG=24h
PREDICTION_HORIZON_PERIODS=3

# --- Data Collection Parameters ---
CANDLE_INTERVAL=5m
TARGET_SUBREDDITS=CryptoCurrency,Bitcoin,altcoin,SatoshiStreetBets,CryptoMoonShots,WallStreetBetsCrypto
REDDIT_POST_LIMIT=25
TWITTER_QUERY_KEYWORDS=crypto,bitcoin

# --- Backfill Parameters ---
BACKFILL_DAYS=30